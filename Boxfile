db1:
  type: mysql

web1:
  shared_writable_dirs:
    - app/cache
    - app/logs

  document_root: web
  default_gateway: app_dev.php
  index_list: [app_dev.php]

  php_version: 5.4.14
  php_extensions:
    - intl
    - mbstring
    - xsl
    - apc
    - mysql
    - pdo_mysql
    - zip
  php_short_open_tag: Off
  magic_quotes_gpc: Off
  php_date_timezone: Asia/Tokyo

  after_build:
    - "cp app/config/parameters.yml.pagoda app/config/parameters.yml"
    - "curl -s http://getcomposer.org/installer | php -- --quiet; php composer.phar install -n"
    - "php app/console doctrine:schema:update --force"

  after_deploy:
    - "php app/console cache:clear --env=prod"
