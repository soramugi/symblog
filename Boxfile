global:
  env:
    - SYMFONY__DATABASE__HOST:   tunnel.pagodabox.com
    - SYMFONY__DATABASE__PORT:   3306
    - SYMFONY__DATABASE__SOCKET: null
    - SYMFONY__DATABASE__NAME:   symfony
db1:
  name: symfony
  type: mysql

web1:
  shared_writable_dirs:
    - app/cache
    - app/logs

  document_root: web
  default_gateway: app.php
  index_list: [app.php]

  php_version: 5.4.14
  php_extensions:
    - intl
    - mbstring
    - xsl
    - apc
    - mysql
    - pdo_mysql
    - zip
  php_short_open_tag: Off
  magic_quotes_gpc: Off
  php_date_timezone: Asia/Tokyo

  after_build:
    - "cp app/config/parameters.yml.pagoda app/config/parameters.yml"
    #- "cp app/config/parameters.yml.dist app/config/parameters.yml"
    - "curl -s http://getcomposer.org/installer | php -- --quiet"
    - "php composer.phar install -n"

  before_deploy:
    - "php app/console doctrine:schema:update --force --env=prod"
  after_deploy:
    - "php app/console cache:clear --env=prod"
